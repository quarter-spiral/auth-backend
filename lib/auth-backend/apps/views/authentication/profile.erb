<div class="narrow">
	<div class="page">
	  <div class="header">
	    <h1>Your account</h1>
	    <p></p>

	  </div>

	  <div class="body">

			<form action="/profile" method="POST" class="form">
        <input type="hidden" name="_method" value="put"/>

			  <%= form_field 'user', 'name', 'Name', @user.name %>

			  <%= form_field 'user', 'email', 'eMail', @user.email, type: 'email' %>

			  <%= form_field 'user', 'password', 'Password', '', type: 'password' %>

			  <%= form_field 'user', 'password_confirmation', 'Password Confirmation', '', type: 'password' %>

			  <button class="btn btn-success">Save updates</button>
			</form>
		</div>
	</div>
	<div class="footer">
    <p>&copy; 2012 Quarter Spiral, Inc.</p>
  </div>
</div>
